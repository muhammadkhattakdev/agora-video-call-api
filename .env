# Server Configuration
NODE_ENV=development
PORT=5000

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/videocall-app

# JWT Configuration
JWT_SECRET=my-super-secret-jwt-key-change-this-in-production-minimum-32-characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Agora Configuration
AGORA_APP_ID=my-agora-app-id
AGORA_APP_CERTIFICATE=my-agora-app-certificate

# Email Configuration (Choose one provider)
# Gmail SMTP
EMAIL_PROVIDER=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=my-gmail@gmail.com
EMAIL_PASS=my-app-password

# SendGrid
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=my-sendgrid-api-key
# SENDGRID_FROM_EMAIL=noreply@mydomain.com

# Mailgun
# EMAIL_PROVIDER=mailgun
# MAILGUN_API_KEY=my-mailgun-api-key
# MAILGUN_DOMAIN=mydomain.com
# MAILGUN_FROM_EMAIL=noreply@mydomain.com

# Email Settings
EMAIL_FROM_NAME=Video Call App
EMAIL_FROM_ADDRESS=noreply@mydomain.com

# AWS Configuration (for file storage and recording)
AWS_ACCESS_KEY_ID=my-aws-access-key
AWS_SECRET_ACCESS_KEY=my-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=my-s3-bucket-name

# Redis Configuration (for session storage and caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=my-redis-password

# Push Notifications
# Firebase
FIREBASE_PROJECT_ID=my-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=my-firebase-private-key-id
FIREBASE_PRIVATE_KEY=my-firebase-private-key
FIREBASE_CLIENT_EMAIL=my-firebase-client-email
FIREBASE_CLIENT_ID=my-firebase-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# Twilio (for SMS verification)
TWILIO_ACCOUNT_SID=my-twilio-account-sid
TWILIO_AUTH_TOKEN=my-twilio-auth-token
TWILIO_PHONE_NUMBER=my-twilio-phone-number

# API Keys
API_KEY=my-api-key-for-webhooks
WEBHOOK_SECRET=my-webhook-secret

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,audio/mpeg

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=my-session-secret-change-this-in-production

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://mydomain.com

# SSL/TLS Configuration (for production)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private-key.pem

# Monitoring and Analytics
# Sentry
SENTRY_DSN=my-sentry-dsn

# Google Analytics
GA_TRACKING_ID=my-google-analytics-tracking-id

# Application Features
ENABLE_RECORDING=true
ENABLE_SCREEN_SHARING=true
ENABLE_CHAT=true
ENABLE_FILE_SHARING=true
ENABLE_WAITING_ROOM=true

# Default User Settings
DEFAULT_MAX_PARTICIPANTS=50
DEFAULT_CALL_DURATION_LIMIT=3600  # 1 hour in seconds
DEFAULT_FILE_STORAGE_LIMIT=1073741824  # 1GB in bytes

# Subscription Plans Configuration
FREE_PLAN_MAX_PARTICIPANTS=4
PREMIUM_PLAN_MAX_PARTICIPANTS=25
ENTERPRISE_PLAN_MAX_PARTICIPANTS=100

# Webhook URLs
AGORA_WEBHOOK_URL=https://myapi.com/webhooks/agora
PAYMENT_WEBHOOK_URL=https://myapi.com/webhooks/payment

# Development Settings
DEBUG_MODE=true
MOCK_EMAIL_DELIVERY=false
MOCK_SMS_DELIVERY=false

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000  # 30 seconds
MONGODB_HEALTH_CHECK_TIMEOUT=5000  # 5 seconds

# Cache Configuration
CACHE_TTL=3600  # 1 hour in seconds
CACHE_MAX_SIZE=1000  # Maximum number of cached items

# API Versioning
API_VERSION=v1
API_PREFIX=/api

# Timezone
DEFAULT_TIMEZONE=UTC

# Internationalization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,zh,ja

# Content Moderation
ENABLE_CONTENT_MODERATION=true
PROFANITY_FILTER_LEVEL=moderate

# Analytics and Metrics
ENABLE_ANALYTICS=true
ANALYTICS_SAMPLING_RATE=0.1  # 10% sampling

# Backup Configuration
BACKUP_INTERVAL=86400000  # 24 hours in milliseconds
BACKUP_RETENTION_DAYS=30

# Performance Settings
CONNECTION_POOL_SIZE=10
QUERY_TIMEOUT=30000  # 30 seconds
REQUEST_TIMEOUT=60000  # 60 seconds

# Feature Flags
FEATURE_FLAG_NEW_UI=false
FEATURE_FLAG_BETA_FEATURES=false
FEATURE_FLAG_AI_TRANSCRIPTION=false